<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tradingapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/fifalogoappicon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/fifalogoappicon"
        android:supportsRtl="true"
        android:theme="@style/Theme.LoginAndCreateAccount"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Transactions"
            android:exported="false" />
        <activity
            android:name=".Trade"
            android:exported="false" />
        <activity
            android:name=".CardClick"
            android:exported="false" />
        <activity
            android:name=".Dashboard"
            android:exported="true" />
        <activity
            android:name=".createacc"
            android:exported="false" />
        <activity
            android:name=".gettingstarted"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>